@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}


<div class="my-address">
    <h3 class="heading">Quản lý tài khoản</h3>
    <form id="profile-form" method="post">
        <div class="row">
            <partial name="_StatusMessage" for="StatusMessage" />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="col-lg-12 ">
                <div class="form-group ">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                </div>
            </div>
            <div class="col-lg-12 ">
                <div class="form-group ">
                    <label asp-for="Input.FullName" class="form-label"></label>
                    <input asp-for="Input.FullName" class="form-control" placeholder="Nhập tên của bạn" />
                    <span asp-validation-for="Input.FullName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group ">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Nhập số điện thoại" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>
            
            <div class="col-lg-12">
                <div class="send-btn mt-3">
                    <button id="update-profile-button" type="submit" class="btn btn-common">Lưu thay đổi</button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

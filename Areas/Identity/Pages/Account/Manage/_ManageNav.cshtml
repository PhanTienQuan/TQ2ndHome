        <h2 class="text-dark">Quân Phan</h2>
    </div>
    <!-- Detail -->
    <div class="detail clearfix">
        <ul>
            <li>
                <a class="nav-link">
                    <i class="lni-files"></i> Dashboard
                </a>
            </li>
            <li>
